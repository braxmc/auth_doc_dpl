<div id='button'>
    <%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
</div>
<h1 class='title'>Edit Patient</h1>

<%= form_for @patient do |f| %>
<div class='form'>
  <%= f.label :first_name %>
</div>
<div class='form'>
  <%= f.text_field :first_name, require: true, placeholder: 'First Name' %>
</div>
<br/>
<div class='form'>
  <%= f.label :last_name %>
</div>
<div class='form'>  
  <%= f.text_field :last_name, require: true, placeholder: 'Last Name' %>
</div>
<br/>
<div class='form'>
  <%= f.submit %>
</div>
<% end %>
