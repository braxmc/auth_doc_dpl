<div id='button'>
    <%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
</div>
<h1 class='title'>Patient List</h1>
<div class='select'>
  <%= link_to 'Add Patient', new_patient_path() %>
</div>
<br/>
<% @patients.each do |patient| %>

<ul>
  <li>
    <div class='list'>
    <%= link_to patient.full_name, patient_path(patient.id) %>
    </div>
    Patient ID Number: <%= patient.id %>
  </li>
</ul>

<% end %>
<br/>
<br/>
<div class='select'>
<%= link_to 'Doctor List', doctors_path() %>
</div>